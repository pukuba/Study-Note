{
  "name": "study-note",
  "version": "1.0.0",
  "description": "Node.js GRPC Note",
  "main": "src/index.ts",
  "scripts": {
    "start": "NODE_PATH=./src nodemon dist/server/index.js & nodemon dist/client/index.js",
    "build": "make protogen && tsc -p .",
    "dev": "npm run dev:server & npm run dev:bff",
    "dev:server": "nodemon src/server/index.ts",
    "dev:bff": "nodemon src/client/index.ts",
    "proto": "./node_modules/.bin/proto-loader-gen-types --longs=String --enums=String --defaults --oneofs --grpcLib=@grpc/grpc-js --outDir=./src/config/types ./src/config/*.proto",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pukuba/Study-Note.git"
  },
  "author": "pukuba",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pukuba/Study-Note/issues"
  },
  "homepage": "https://github.com/pukuba/Study-Note#readme",
  "dependencies": {
    "@grpc/grpc-js": "^1.2.8",
    "@types/express": "^4.17.11",
    "express": "^4.17.1",
    "google-protobuf": "^3.15.0",
    "grpc-tools": "^1.10.0",
    "grpc_tools_node_protoc_ts": "^5.0.1",
    "mongodb": "^3.6.4",
    "nodemon": "^2.0.7",
    "typescript": "^4.1.5"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.7.4",
    "@types/mongodb": "^3.6.8"
  }
}